<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff"
    android:padding="5dp"
    android:layout_margin="10dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mImage_CurrentProductImg"
        android:src="@drawable/testapple"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품명"
        android:id="@+id/mText_CurrentProduct"
        android:textColor="@color/colorOrange"
        android:gravity="left|center_vertical"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:layout_alignTop="@+id/mImage_CurrentProductImg"
        android:layout_toEndOf="@+id/mImage_CurrentProductImg"
        android:layout_marginStart="10dp"
        android:minLines="2" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="점포명"
        android:id="@+id/mText_OrderContent1"
        android:textColor="#808080"
        android:textSize="13dp"
        android:gravity="center"
        android:layout_below="@+id/mText_CurrentProduct"
        android:layout_alignStart="@+id/mText_CurrentProduct"
        android:layout_marginTop="10dp"
        android:background="#eeeeee" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="판매가"
        android:id="@+id/mText_OrderContent2"
        android:textColor="#808080"
        android:textSize="13dp"
        android:gravity="center"
        android:layout_below="@+id/mText_OrderContent1"
        android:layout_alignEnd="@+id/mText_OrderContent1"
        android:layout_marginTop="5dp"
        android:background="#eeeeee" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="행사내역"
        android:id="@+id/mText_OrderContent3"
        android:textColor="#808080"
        android:textSize="13dp"
        android:layout_below="@+id/mText_OrderContent2"
        android:layout_alignEnd="@+id/mText_OrderContent2"
        android:layout_marginTop="5dp"
        android:background="#eeeeee"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재점포"
        android:id="@+id/mText_CurrentStore"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_alignTop="@+id/mText_OrderContent1"
        android:layout_toEndOf="@+id/mText_OrderContent1"
        android:layout_marginStart="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제금액"
        android:id="@+id/mText_CurrentPrice"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_alignTop="@+id/mText_OrderContent2"
        android:layout_alignStart="@+id/mText_CurrentStore"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="행사내역"
        android:id="@+id/mText_CurrentEvent"
        android:textColor="#008835"
        android:textSize="13dp"
        android:layout_alignTop="@+id/mText_OrderContent3"
        android:layout_alignStart="@+id/mText_CurrentPrice"
        android:textStyle="bold" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="-"
        android:id="@+id/mBtn_Minus"
        android:layout_weight="0.3"
        android:layout_marginLeft="30dp"
        android:background="#909090"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/mText_OrderNum"
        android:layout_toStartOf="@+id/mText_OrderNum" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="0"
        android:id="@+id/mText_OrderNum"
        android:layout_weight="0.3"
        android:gravity="center"
        android:textSize="15dp"
        android:background="#eeeeee"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_alignTop="@+id/mBtn_Plus"
        android:layout_toStartOf="@+id/mBtn_Plus" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="+"
        android:id="@+id/mBtn_Plus"
        android:layout_weight="0.3"
        android:background="#909090"
        android:textColor="#ffffff"
        android:textSize="13dp"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/mText_CurrentEvent"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

</RelativeLayout>
