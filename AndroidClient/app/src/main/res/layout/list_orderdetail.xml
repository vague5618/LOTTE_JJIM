<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff"
    android:layout_margin="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="15dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/mImage_OrderProductImg"
        android:src="@drawable/testapple"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품명"
        android:id="@+id/mText_OrderProductName"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:layout_alignTop="@+id/mImage_OrderProductImg"
        android:layout_toEndOf="@+id/mImage_OrderProductImg"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="판매가"
        android:id="@+id/mText_OrderContent1"
        android:textColor="#808080"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_below="@+id/mText_OrderProductName"
        android:layout_alignStart="@+id/mText_OrderProductName"
        android:layout_marginTop="10dp"
        android:background="#eeeeee" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="예약수량"
        android:id="@+id/mText_OrderContent2"
        android:textColor="#808080"
        android:textSize="12dp"
        android:gravity="center"
        android:background="#eeeeee"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/mText_OrderProductEvent"
        android:layout_toStartOf="@+id/mText_OrderProductNum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10000원"
        android:id="@+id/mText_OrderProductPrice"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_alignTop="@+id/mText_OrderContent1"
        android:layout_toEndOf="@+id/mText_OrderContent1"
        android:layout_marginStart="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10개"
        android:id="@+id/mText_OrderProductNum"
        android:textColor="#AA0000"
        android:textSize="14dp"
        android:textStyle="normal|bold"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/mText_OrderContent2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="행사적용"
        android:id="@+id/textView"
        android:textColor="#808080"
        android:textSize="12dp"
        android:gravity="center"
        android:background="#eeeeee"
        android:layout_below="@+id/mText_OrderContent1"
        android:layout_toStartOf="@+id/mText_OrderProductPrice"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="행사내용"
        android:id="@+id/mText_OrderProductEvent"
        android:textColor="#008835"
        android:textSize="12dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="5dp"
        android:textStyle="bold" />


</RelativeLayout>