<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/mText_StoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="지점이름"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_alignParentTop="false"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소1"
        android:id="@+id/mText_Address"
        android:textColor="@color/black_overlay"
        android:textSize="10dp"
        android:layout_below="@+id/mText_StoreName"
        android:layout_alignStart="@+id/mText_StoreName"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/mBtn_Jjim" />



    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/mBtn_ShowStoreMap"
        android:background="#00ffffff"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_place"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/mText_Address"
        android:layout_toStartOf="@+id/mBtn_Jjim" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_favorite"
        android:id="@+id/mBtn_Jjim"
        android:scaleType="centerCrop"
        android:background="#00ffffff"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/mText_Address"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재고"
        android:id="@+id/mText_Stock"
        android:textColor="@color/colorOrange"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/mText_Content"
        android:layout_alignEnd="@+id/mText_Content"
        android:layout_alignStart="@+id/mText_Content"
        android:layout_above="@+id/mBtn_ShowStoreMap"
        android:gravity="center"
        android:layout_marginTop="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재고수량"
        android:id="@+id/mText_Content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:autoText="false"
        android:background="@color/colorOrange"
        android:layout_alignTop="@+id/mText_StoreName"
        android:layout_alignEnd="@+id/mBtn_Jjim"
        android:layout_alignStart="@+id/mBtn_ShowStoreMap"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="행사내역"
        android:id="@+id/mText_Event"
        android:textColor="#008835"
        android:textSize="11dp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="12dp"
        android:text="행사내역"
        android:id="@+id/textView4"
        android:textColor="#909090"
        android:gravity="center"
        android:autoText="false"
        android:background="#eeeeee"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/mText_Address"
        android:layout_alignStart="@+id/mText_Address"
        android:layout_marginTop="5dp"
        android:textSize="10dp" />


</RelativeLayout>
